  [ModalMode.CLOSED]: "",
  [ModalMode.ADD]: "添加{{entityLabel}}",
  [ModalMode.EDIT]: "编辑{{entityLabel}}",
  [ModalMode.VIEW]: "查看{{entityLabel}}",
};

