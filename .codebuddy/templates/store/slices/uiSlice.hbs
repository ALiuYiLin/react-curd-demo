import type { StateCreator } from 'zustand'
import { ModalMode, type UI } from '../types'

export const createUISlice: StateCreator<UI, [], [], UI> = (set, get) => ({
{{#each uiStates}}
  {{{name}}}: {{{defaultValue}}},
{{/each}}
{{#each uiActions}}
  {{{name}}}: ({{#each params}}{{{name}}}{{#unless @last}}, {{/unless}}{{/each}}) => set({ {{{setField}}}: {{#if params}}{{{params.[0].name}}}{{else}}null{{/if}} }),
{{/each}}
})
